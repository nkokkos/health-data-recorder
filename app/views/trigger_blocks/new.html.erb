<%= render 'layouts/sidebar_menu' %>
       <div id="page-wrapper">
           <div class="row">
               <div class="col-lg-12">
                   <h2 class="page-header">Enter Name for Trigger Block</h2>
               </div>
               <!-- /.col-lg-12 -->
           </div>
           <!-- /.row -->
           <div class="row">
               <div class="col-lg-12">
                   <div class="panel panel-default">
                       <div class="panel-heading">
                        Trigger Blocks:
                       </div>
                       <!-- /.panel-heading -->
                       <div class="panel-body">
                         <div class="form-group">
                         <%= simple_form_for(@trigger_block) do |f| %>
                           <div class="form-group">
      									     <%= f.input :description, label: "Description for trigger block", required: true,
                             :input_html => {:class => "form-control", :placeholder => "Description for trigger block" } %>
      									   </div>
                         </div>

                       <div class="form-actions">
                          <%= f.button :submit, "Update",  class: "btn btn-success"  %>
                        <%#= link_to  "Cancel", :back,   class: "btn btn-default"  %>
                        <%= link_to  "Cancel", trigger_blocks_path,class: "btn btn-default"  %>
                       </div>
                       <% end %>

                           <!-- /.table-responsive -->
                       </div>
                       <!-- /.panel-body -->
                   </div>
                   <!-- /.panel -->
               </div>
             </div>
           <!-- /.row -->
           <!-- /.row -->
       <!-- /#page-wrapper -->
</div>
