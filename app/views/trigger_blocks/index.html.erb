<%= render 'layouts/sidebar_menu' %>
       <div id="page-wrapper">
           <div class="row">
               <div class="col-lg-12">
                   <h3 class="page-header">Trigger Block for Patient:<%=@patient.first.username %></h3>
               </div>
               <!-- /.col-lg-12 -->
           </div>
           <!-- /.row -->
           <div class="row">
               <div class="col-lg-12">
                   <div class="panel panel-default">
                       <div class="panel-heading">
                        Trigger Blocks List:
                       </div>
                       <!-- /.panel-heading -->
                       <div class="panel-body">
                           <div class="table-responsive">
                               <table class="table table-hover">
                                   <thead>
                                       <tr>
                                           <!-- <th>Device Id</th> -->
                                           <th>Trigger Block Description</th>
                                           <th>Add Triggers</th>
										   <th>Actions</th>
                                       </tr>
                                   </thead>
                                   <tbody>
                                     <% @trigger_blocks.all.each do |trigger_block| %>
                                         <tr>
                                           <td><%=trigger_block.description%></td>
                                           <td><%=link_to "Create/View/Delete Triggers",    patient_trigger_block_triggers_path(:patient_id => @patient.first.id, :trigger_block_id => trigger_block.id), { :class=>"btn btn-primary btn-sm" } %></td>
                                           <td><%= link_to content_tag(:i, "", class: "icon-trash icon-white") + "Delete this block",
                                           patient_trigger_block_path(:patient_id => @patient.first.id, :id => trigger_block.id), method: :delete, class: "btn btn-danger btn-sm" %>
										                     </tr>
                                        <% end %>
                                   </tbody>
                               </table>
                           </div>
                           <div class="pull-right">
						     <%#= link_to  "Cancel", patient_trigger_blocks_path,   class: "btn btn-default"  %>
                             <%= link_to  "Cancel",  patients_path,   class: "btn btn-default"  %>
							 <%= link_to content_tag(:i, "", class: "pull-right") + "Add New",  new_patient_trigger_block_path, class: "btn btn-success" %>
                           </div>
                           <!-- /.table-responsive -->
                       </div>
                       <!-- /.panel-body -->
                   </div>
                   <!-- /.panel -->
               </div>
             </div>
           <!-- /.row -->
           <!-- /.row -->

       <!-- /#page-wrapper -->
</div>
