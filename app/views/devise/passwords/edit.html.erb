<body>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
	 <div class="text-center">
      <img alt="ELTAB", src=<%=image_url("logo.png")%> />
	  </div>
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title">Change your Password:</h1>
        </div>
        <div class="panel-body">
        <!-- <form role="form"> -->
        <div class="has-error">
        </div>
		  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), :html => { :method => :put} ) do |f| %>
			<fieldset>
				<div class="form-group">
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
				 </div>
         <div class="form-group">
           <%= f.input :password, label: "New password", required: true, autofocus: true, :input_html => {:class => "form-control"} %>
          </div>
          <div class="form-group">
            <%= f.input :password_confirmation, label: "Confirm your new password", required: true, :input_html => {:class => "form-control"} %>
          </div>
         <div class="form-actions">
           <%= f.button :submit, "Change my password", class: 'button right btn-lg btn-block' %>
         </div>
			  </fieldset>
				<!-- Change this to a button or input when using this as a form -->
        <% end %>
				  <div class="footer">
					  <%= render "devise/shared/links" %>
				 </div>
		<!-- </form> -->
          </div>
            </div>
        </div>
    </div>
</div>
</body>
