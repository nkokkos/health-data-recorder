<%= render 'layouts/sidebar_menu' %>
        <div id="page-wrapper">
          <div class="row">
            <div class="col-lg-12">
              <h3 class="page-header">Settings:</h3>
            </div>
            <!-- /.col-lg-12 -->
          </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Settings:
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <!-- Nav tabs -->
                          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#home" data-toggle="tab">Access Key Generation</a>
                                </li>
                                <li><a href="#profile" data-toggle="tab">Add Patients</a>
                                </li>
                                <li><a href="#messages" data-toggle="tab">Remove Patients</a>
                                </li>
                                <li><a href="#bmi" data-toggle="tab">BMI Calculation</a>
                                </li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="home">
                                  <h4>Your access key:</h4>
                                  <p>Make sure you click "Update" after key generation.<p>
                                      <div class="form-group">
                                      <%= f.input :access_id, required: false, label:false, autofocus: false, :input_html => {:class => "form-control" } %>
                                      <%#= link_to (content_tag(:i,nil,:class => "fa fa-clipboard fa-2x") + " Copy to Clipboard").html_safe, "Test" %>
                                      </div>
                                      <div class="form-group">
                                      <%= link_to  "Generate new access key", users_token_path, class: "btn btn-default",
                                                                                        title: 'Click Update below after key generation', rel: 'tooltip'  %>
                                      </div>
                                </div>

                                <div class="tab-pane fade" id="profile">
                                  <h4>Candidate Patients:</h4>
                                  <div class="form-group">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <!-- <th>Device Id</th> -->
                                                    <th>User Name</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                              <% for user in User.all %>
                                              <tr>
                                                <% if user.id == current_user.id %>
                                                  <td><strong><%= user.username %></strong> (This is you)</td>
                                                  <td><%= link_to "Add Patient", patient_relationships_path(:patient_id => user),
                                                     :class=>"btn btn-primary btn-sm", :method => :post %></td>
                                                <% elsif @user.username.size == 0 %>
                                                  <td><p><strong>This patient has not entered his/name in settings</strong></td>
                                                  <td><%= link_to "Add Patient", patient_relationships_path(:patient_id => user),
                                                     :class=>"btn btn-primary btn-sm", :method => :post  %></td>
                                                <% else %>
                                                       <td><p><strong><%= user.username %></strong></td>
                                                       <td><%= link_to "Add Patient", patient_relationships_path(:patient_id => user),
                                                          :class=>"btn btn-primary btn-sm", :method => :post  %></td>

                                              </tr>
                                              <% end %>
                                              <% end %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                </div>
                                <div class="tab-pane fade" id="messages">
                                  <h4>Your Patients:</h4>
                                  <div class="form-group">
                                    <ul>
                                    <% for patient_relation in @user.patient_relationships %>
                                      <li>
                                      <%= patient_relation.patient.username %>
                                      (<%= link_to "Remove", patient_relation, :method => :delete %>)
                                      </li>
                                    <% end %>
                                   </ul>
                                 </div>
                                </div>


                                <div class="tab-pane fade in active" id="bmi">
                                  <h4>Select which device should be used for bmi/fat% calculation:</h4>

                                </div>




                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <div class="form-actions">
                      <%= f.button :submit, "Update", class: "btn btn-success"%>
                      <%= link_to  "Cancel", root_path, class: "btn btn-default" %>
                   </div>
                   <% end %>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-6 -->
            </div>
</div>
            <!-- /.row -->
