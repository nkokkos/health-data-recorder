<div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to "El Tab Project", root_path, {:class => "navbar-brand"} %>
            </div>
            <!-- /.navbar-header -->
            <%= render 'layouts/header_with_menu' %>
            <!-- /.navbar-top-links -->
            <%= render 'layouts/sidebar_menu' %>
            <!-- /.navbar-static-side -->
        </nav>
        <div id="page-wrapper">
          <div class="row">
            <div class="col-lg-12">
              <h3 class="page-header">Settings:</h3>
            </div>
            <!-- /.col-lg-12 -->
          </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Settings:
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <!-- Nav tabs -->
                          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#home" data-toggle="tab">Access Key Generation</a>
                                </li>
                                <li><a href="#profile" data-toggle="tab">Add Patients</a>
                                </li>
                                <li><a href="#messages" data-toggle="tab">Remove Patients</a>
                                </li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="home">
                                  <h4>Your access key:</h4>
                                  <p>Make sure you click "Update" after key generation.<p>
                                      <div class="form-group">
                                      <%= f.input :access_id, required: false, label:false, autofocus: false, :input_html => {:class => "form-control" } %>
                                      <%#= link_to (content_tag(:i,nil,:class => "fa fa-clipboard fa-2x") + " Copy to Clipboard").html_safe, "Test" %>
                                      </div>
                                      <div class="form-group">
                                      <%= link_to  "Generate new access key", users_token_path, class: "btn btn-default",
                                                                                        title: 'Click Update below after key generation', rel: 'tooltip'  %>
                                      </div>
                                </div>
                                <div class="tab-pane fade" id="profile">
                                  <h4>Patient List:</h4>
                                  <div class="form-group">
                                  <% for user in User.all %>
                                    <div class="user">
                                      <p>
                                        <% if user.id == current_user.id %>
                                         <p><strong><%= user.username %></strong> (This is you)
                                         (<%= link_to "Add Patient", patient_relationships_path(:patient_id => user),
                                         :method => :post %>)
                                        <% else %>
                                        <p><strong><%= user.username %></strong>
                                        (<%= link_to "Add Patient", patient_relationships_path(:patient_id => user),
                                        :method => :post %>)
                                        <% end %>
                                        <div class="clear"></div>
                                      </p>
                                    </div>
                                  <% end %>
                                </div>
                                </div>
                                <div class="tab-pane fade" id="messages">
                                  <h4>Your Patients:</h4>
                                  <div class="form-group">
                                    <ul>
                                    <% for patient_relation in @user.patient_relationships %>
                                      <li>
                                      <%= patient_relation.patient.username %>
                                      (<%= link_to "Remove", patient_relation, :method => :delete %>)
                                      </li>
                                    <% end %>
                                   </ul>
                                 </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <div class="form-actions">
                      <%= f.button :submit, "Update", class: "btn btn-success"%>
                      <%= link_to  "Cancel", root_path, class: "btn btn-default" %>
                   </div>
                   <% end %>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-6 -->
            </div>
            <!-- /.row -->
   </div>
</body>
