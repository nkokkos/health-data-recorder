<%= render 'layouts/sidebar_menu' %>
       <div id="page-wrapper">
           <div class="row">
               <div class="col-lg-12">
                   <h3 class="page-header">List of Triggers for Patient:<%=@patient.first.username %>,TriggerBlock:<%=@trigger_block.first.description %>
				   </h3>
			   </div>
               <!-- /.col-lg-12 -->
           </div>
           <!-- /.row -->
           <div class="row">
               <div class="col-lg-12">
                   <div class="panel panel-default">
                       <div class="panel-heading">
                        List of Triggers:
                       </div>
                       <!-- /.panel-heading -->
                       <div class="panel-body">
                           <div class="table-responsive">
                               <table class="table table-hover">
                                   <thead>
                                       <tr>
                                           <!-- <th>Device Id</th> -->
                                           <th>Trigger Condition</th>
                                           <th>Measure Value</th>
										   <th>Device</th>
										   <th>Measure</th>
										   <th>Actions</th>
                                       </tr>
                                   </thead>
                                   <tbody>
                                     <% @triggers.all.each do |trigger| %>
                                         <tr>
                                           <td><%=trigger.condition %></td>
										   <td><%=trigger.measure_value %></td>
										   <td><%=Device.find(trigger.device_id).name %></td>
										   <td><%=Measure.find(trigger.measure_id).name %></td>
                                           <td><%=link_to "Edit", edit_patient_trigger_block_trigger_path(:id => trigger.id), :class=>"btn btn-primary btn-sm" %></td>
                                           <td><%= link_to content_tag(:i, "", class: "icon-trash icon-white") + "Delete",
                                             patient_trigger_block_trigger_path(:id => trigger.id), method: :delete, class: "btn btn-danger btn-sm" %>
										                     </tr>
                                        <% end %>
                                   </tbody>
                               </table>
                           </div>
                           <div class="pull-right">
                             <%= link_to  "Cancel",  patient_trigger_blocks_path ,   class: "btn btn-default"  %>
							 <%= link_to content_tag(:i, "", class: "pull-right") + "Add New Trigger",  new_patient_trigger_block_trigger_path , class: "btn btn-success" %>                          	 
						   </div>  
                           <!-- /.table-responsive -->
                       </div>
                       <!-- /.panel-body -->
                   </div>
                   <!-- /.panel -->
               </div>
             </div>
           <!-- /.row -->
           <!-- /.row -->

       <!-- /#page-wrapper -->
</div>
