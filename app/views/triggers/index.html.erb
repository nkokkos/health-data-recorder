<%= render 'layouts/sidebar_menu' %>
       <div id="page-wrapper">
           <div class="row">
               <div class="col-lg-12">
                   <h2 class="page-header">Trigger Block for Patient: <%=@patient.first.username %></h2>
               </div>
               <!-- /.col-lg-12 -->
           </div>
           <!-- /.row -->
           <div class="row">
               <div class="col-lg-12">
                   <div class="panel panel-default">
                       <div class="panel-heading">
                        List of Triggers:
                       </div>
                       <!-- /.panel-heading -->
                       <div class="panel-body">
                           <div class="table-responsive">
                               <table class="table table-hover">
                                   <thead>
                                       <tr>
                                           <!-- <th>Device Id</th> -->
                                           <th>Trigger Condition</th>
                                           <th>Measure Value</th>
										   <th>Device.id</th>
										   <th>Measure.id</th>
										   <th>Actions</th>
                                       </tr>
                                   </thead>
                                   <tbody>
                                     <% @triggers.all.each do |trigger| %>
                                         <tr>
                                           <td><%=trigger.condition %></td>
										   <td><%=trigger.measure_value %></td>
										   <td><%=trigger.device_id %></td>
										   <td><%=trigger.measure_id%></td>
                                           <td><%=link_to "Create/View/Delete Triggers", new_patient_trigger_block_path, :class=>"btn btn-primary btn-sm" %></td>
                                           <td><%= link_to content_tag(:i, "", class: "icon-trash icon-white") + "Delete this block",
                                           patient_trigger_block_path(:patient_id => @patient.first.id, :id => trigger_block.id), method: :delete, class: "btn btn-danger btn-sm" %>
										                     </tr>
                                        <% end %>
                                   </tbody>
                               </table>
                           </div>
                           <div class="pull-right">
                             <%= link_to content_tag(:i, "", class: "pull-right") + "Add New",  new_patient_trigger_block_trigger_path , class: "btn btn-success" %>
                           </div>
                           <!-- /.table-responsive -->
                       </div>
                       <!-- /.panel-body -->
                   </div>
                   <!-- /.panel -->
               </div>
             </div>
           <!-- /.row -->
           <!-- /.row -->

       <!-- /#page-wrapper -->
</div>
