<%= render 'layouts/sidebar_menu' %>
       <div id="page-wrapper">
           <div class="row">
               <div class="col-lg-12">
                   <h2 class="page-header">Fill in your trigger values</h2>
               </div>
               <!-- /.col-lg-12 -->
           </div>
           <!-- /.row -->
           <div class="row">
               <div class="col-lg-12">
                   <div class="panel panel-default">
                       <div class="panel-heading">
                        Triggers:
                       </div>
                       <!-- /.panel-heading -->
                       <div class="panel-body">
                         <div class="form-group">
                         <%= simple_form_for @trigger, :url =>  patient_trigger_block_triggers_path  do |f| %>
                           <div class="form-group">
						     <%= f.input :condition,  :collection => ['>','>=','<','<='],:label => "Select Condition:", :include_blank => false, :input_html => {:class => "form-control"} %>
      						 <%= f.input :measure_id, :collection => Measure.all, :label_method => :name, :value_method => :id, label: "Select Measure Type", required: true,
                             :input_html => {:class => "form-control", :placeholder => "Select Measure Type" } %>
							 <%= f.input :device_id, :collection => Device.all, label: "Select Device", required: true,
                             :input_html => {:class => "form-control", :placeholder => "Select Device" } %>
							 <%= f.input :measure_value, label: "Measure Value", required: true,
                             :input_html => {:class => "form-control", :placeholder => "Enter Measure Value" } %>
      						</div>
                         </div>

                       <div class="form-actions">
					    <%= link_to  "Cancel",  patient_trigger_block_triggers_path ,   class: "btn btn-default"  %>
                        <%= f.button :submit, "Create",  class: "btn btn-success"  %>
                        <%#= link_to  "Cancel", :back,   class: "btn btn-default"  %>
                        <%#= link_to  "Cancel",  patient_trigger_blocks_path ,class: "btn btn-default"  %>
                       </div>
                       <% end %>

                           <!-- /.table-responsive -->
                       </div>
                       <!-- /.panel-body -->
                   </div>
                   <!-- /.panel -->
               </div>
             </div>
           <!-- /.row -->
           <!-- /.row -->
       <!-- /#page-wrapper -->
</div>
